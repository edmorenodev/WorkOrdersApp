@model IEnumerable<WorkOrdersApp.Core.Entities.WorkOrder>
@{
    ViewData["Title"] = "Work Orders";
    Layout = "_Layout";
}

<h2>Work Orders</h2>

<a class="btn btn-primary mb-3" asp-action="Create">New Work Order</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Area</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Area?.Name</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>